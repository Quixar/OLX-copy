<Window x:Class="OLX_copy.ProductManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OLX_copy"
        mc:Ignorable="d"
        Title="Управління оголошеннями" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Додати оголошення" Click="AddProduct_Click" Width="150" Margin="0,0,0,10"/>
            <ListBox x:Name="ProductList" DisplayMemberPath="Name" Height="300"/>
            <Button Content="Видалити вибране" Click="DeleteProduct_Click" Width="150" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
