<Window x:Class="OLX_copy.Views.UserMyAdsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OLX_copy.Views"
        mc:Ignorable="d"
        Title="UserMyAdsPage" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#FFEB2EA8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Background="Black" Grid.Row="0" LastChildFill="False">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="50,0,0,0">
                <TextBox x:Name="SearchBox" Width="250" Height="30" Margin="10,0"
                         VerticalAlignment="Center" Padding="5" FontSize="14"
                         Text="Search..." Foreground="Gray"/>
                <!--GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus"-->
                <Button Width="30" Height="30" Content="🔍"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0"
                        DockPanel.Dock="Right">
                <Button Content="🛒" Width="30" Height="30" Margin="5,0"/>
                <Button Content="👤" Width="30" Height="30" Margin="5,0"/>
            </StackPanel>
        </DockPanel>

        <!-- TOP NAVIGATION -->
        <DockPanel Background="#FFEB2EA8" Grid.Row="1" Height="40" LastChildFill="False">
            <Border Width="200" CornerRadius="5" Background="White" BorderBrush="Gray" BorderThickness="1" Height="30" 
                    VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                    <TextBlock Text="☰" FontSize="14" Margin="5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="All Categories" FontSize="14" Margin="5,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </DockPanel>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2" Margin="15,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Grid Grid.Column="0" Margin="0,10,10,10">
                <Border Background="#FFEFEFEF" CornerRadius="15" Padding="10" BorderBrush="Gray" BorderThickness="1" VerticalAlignment="Top">
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Height" Value="40"/>
                                <Setter Property="Margin" Value="0,5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Background" Value="#FFEB2EA8"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </StackPanel.Resources>
                        <Button Content="My ads"/>
                        <Button Content="Favorites"/>
                        <Button Content="Messages"/>
                        <Button Content="Customization"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- MY ADS CONTENT -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,0,10">
                    <!-- FILTERS -->
                    <Border Background="#F2F2F2" CornerRadius="15" Padding="15" Margin="0,0,0,10" BorderBrush="LightGray" BorderThickness="1">
                        <StackPanel Orientation="Vertical">
                            <WrapPanel Margin="0,0,0,10">
                                <Button Content="Write a review" Background="#FFEB2EA8" Foreground="White" Style="{StaticResource RoundedButtonStyle}" Height="40" MinWidth="120" FontSize="16" Margin="0,0,10,5"/>
                                <Button Content="Write a message" Background="#FFEB2EA8" Foreground="White" Style="{StaticResource RoundedButtonStyle}" Height="40" MinWidth="120" FontSize="16" Margin="0,0,10,5"/>
                                <Button Content="Add to cart" Background="White" BorderBrush="Gray" BorderThickness="1" Foreground="Black" Style="{StaticResource RoundedButtonStyle}" Height="40" MinWidth="120" FontSize="16" Margin="0,0,10,5"/>
                                <Button Content="Remove" Background="White" BorderBrush="Gray" BorderThickness="1" Foreground="Black" Style="{StaticResource RoundedButtonStyle}" Height="40" MinWidth="120" FontSize="16" Margin="0,0,0,5"/>
                            </WrapPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBox Width="150" Height="30" Margin="5" Padding="5" Text="Order Id" />
                                <ComboBox Width="150" Height="30" Margin="5">
                                    <ComboBoxItem Content="All / Last year" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- ORDER CARD -->
                    <Border Background="#EFEFEF" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="160"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="images/iphone.png" Width="100" Height="100" Margin="0,0,10,0" Grid.Column="0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="APPLE iPhone 13 128 GB Midnight Dual SIM" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="Black" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="$595" FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="Free returns · Delivery guarantee" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="Order date: Dec 15, 2024" FontSize="10" Foreground="DarkGray"/>
                                <TextBlock Text="Order ID: 3242527852383983" FontSize="10" Foreground="DarkGray"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <Button Content="Check messages" Background="#FFEB2EA8" Foreground="White" Style="{StaticResource RoundedButtonStyle}"/>
                                <Button Content="Edit" Style="{StaticResource RoundedButtonStyle}"/>
                                <Button Content="Delete" Style="{StaticResource RoundedButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- FOOTER -->
        <DockPanel Grid.Row="3" Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Center" LastChildFill="True">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="images/logo_for_OLX_copy-removebg-preview.png" Width="100" Height="30" Margin="15,0" VerticalAlignment="Center"/>
                <TextBlock Text="© 2025 OLX Copy. All Rights Reserved."
                           Foreground="White" VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
